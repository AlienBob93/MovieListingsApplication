<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.constraint.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/bt_watch_trailers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="@string/string_play_trailers"
        android:textSize="@dimen/text_size_small_16sp"
        android:fontFamily="sans-serif"
        android:drawableStart="@drawable/ic_local_movies_black_24dp"
        android:drawablePadding="@dimen/drawable_padding"
        android:layout_marginTop="@dimen/padding_top_16dp"/>

    <Button
        android:id="@+id/bt_read_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="@string/string_read_reviews"
        android:textSize="@dimen/text_size_small_16sp"
        android:fontFamily="sans-serif"
        android:drawableStart="@drawable/ic_thumbs_up_down_black_24dp"
        android:drawablePadding="@dimen/drawable_padding"
        android:layout_marginTop="@dimen/padding_top_16dp"
        app:layout_constraintTop_toBottomOf="@id/bt_watch_trailers"
        app:layout_constraintLeft_toLeftOf="@+id/bt_watch_trailers" />

</android.support.constraint.ConstraintLayout>
</layout>